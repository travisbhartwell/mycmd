#!/usr/bin/env -S mycmd
# shellcheck shell=bash

set -o nounset -o errexit -o errtrace -o pipefail

mycmd.main() {
    local exit_code=0

    mycmd.output "$(mycmd.ansi bold || true)Logging output to file: $(mycmd.ansi blue || true)${1}$(mycmd.ansi resetForeground || true)$(mycmd.ansi normal || true)"
    logging.capture_and_display "${@}" || exit_code=$?

    exit "${exit_code}"
}
