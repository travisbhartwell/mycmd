# -*- mode: shell-script; sh-shell: bash; sh-basic-offset: 4; sh-indentation: 4; coding: utf-8 -*-
# shellcheck shell=bash

# MyCmd Shell Extended Command Group Library

set -o nounset -o errexit -o errtrace -o pipefail

(return 0 >/dev/null 2>&1) || {
    echo >&2 "$0 is a library only meant to be sourced."
    exit 1
}

mycmd:command_group_registry.register_version "1.0"
mycmd:command_group_registry.register_short_description "MyCmd Shell Extended Command Group Library"
mycmd:command_group_registry.register_long_description "Library for common routines for extended Shell Routines."

[[ -n "${_MYCMD_SOURCING_COMMAND_GROUP_FOR_HELP:-}" ]] && return

[[ -n "${_MYCMD_SHELL_EXTENDED_LIB:-}" ]] && return
readonly _MYCMD_SHELL_EXTENDED_LIB=1

mycmd.trace "The MyCmd Shell Extended command group library has been sourced."
